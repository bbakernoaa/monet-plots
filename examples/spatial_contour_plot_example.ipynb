   "source": [
    "# Spatial Contour Plot Example\n",
    "\n",
    "This notebook demonstrates how to use `monet-plots` to create a spatial contour plot."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np\n",
    "import xarray as xr\n",
    "import cartopy.crs as ccrs\n",
    "import cartopy.feature as cfeature\n",
    "from monet_plots.plots.spatial_contour import SpatialContourPlot\n",
    "import matplotlib.pyplot as plt"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Generate sample data\n",
    "np.random.seed(42)\n",
    "lon = np.arange(-10, 10, 0.5)\n",
    "lat = np.arange(20, 40, 0.5)\n",
    "lon_grid, lat_grid = np.meshgrid(lon, lat)\n",
    "data = np.sin(lon_grid) + np.cos(lat_grid) + np.random.rand(len(lat), len(lon)) * 0.5\n",
    "\n",
    "# Create an xarray DataArray\n",
    "da = xr.DataArray("",
    "    data,
    "    coords={'lat': lat, 'lon': lon},
    "    dims=['lat', 'lon'],
    "    name='sample_data'
    ")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create a SpatialContourPlot instance\n",
    "plot = SpatialContourPlot(figsize=(10, 8), subplot_kw={'projection': ccrs.PlateCarree()})\n",
    "\n",
    "# Plot the data\n",
    "plot.plot(da, transform=ccrs.PlateCarree(), levels=10, cmap='viridis')\n",
    "\n",
    "# Add geographical features\n",
    "plot.ax.add_feature(cfeature.COASTLINE)\n",
    "plot.ax.add_feature(cfeature.BORDERS, linestyle=':')\n",
    "plot.ax.add_feature(cfeature.LAND, facecolor='lightgray')\n",
    "plot.ax.gridlines(draw_labels=True, dms=True, x_inline=False, y_inline=False)\n",
    "\n",
    "# Add title\n",
    "plot.ax.set_title('Spatial Contour Plot Example')\n",
    "\n",
    "# Save the plot\n",
    "plot.save('spatial_contour_plot_example.png')"
   ]
  }
 ],
